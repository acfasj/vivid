{
  "name": "vivid",
  "version": "0.0.1",
  "description": "translator",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.bootcss.com 'unsafe-eval'; object-src 'self'; media-src http://res.iciba.com https://res.iciba.com",
  "permissions": ["storage", "declarativeContent", "activeTab", "tabs"],
  "background": {
    "scripts": ["hot-reload.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/vue.js", "content/index.js"],
    "css": ["css/content.css"]
  }],
  "options_ui": {
    "page": "option/index.html"
  },
  "page_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "img/get_started16.png",
      "32": "img/get_started32.png",
      "48": "img/get_started48.png",
      "128": "img/get_started128.png"
    }
  },
  "icons": {
    "16": "img/get_started16.png",
    "32": "img/get_started32.png",
    "48": "img/get_started48.png",
    "128": "img/get_started128.png"
  }
}
