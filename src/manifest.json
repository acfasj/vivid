{
  "name": "vivid",
  "version": "0.0.1",
  "description": "translator",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.bootcss.com 'unsafe-eval'; object-src 'self';",
  "permissions": [
    "management",
    "storage",
    "declarativeContent",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["static/content.css"]
    }
  ],
  "options_page": "option.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "static/get_started16.png",
      "32": "static/get_started32.png",
      "48": "static/get_started48.png",
      "128": "static/get_started128.png"
    }
  },
  "icons": {
    "16": "static/get_started16.png",
    "32": "static/get_started32.png",
    "48": "static/get_started48.png",
    "128": "static/get_started128.png"
  }
}
